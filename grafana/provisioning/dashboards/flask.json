{
  "uid": "flask-dashboard",
  "title": "Flask Gunicorn Logs & Metrics",
  "tags": ["flask", "gunicorn", "logs", "security"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 2,
  "refresh": "10s",
  "panels": [
    {
      "type": "logs",
      "title": "Raw Gunicorn Logs",
      "targets": [
        {
          "expr": "{container=~\".*server.*\", method=~\"GET|POST\"}",
          "datasource": {"type": "loki", "uid": "loki"}
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 8}
    },
    {
      "type": "logs",
      "title": "Falco Alerts",
      "targets": [
        {
          "expr": "{falco_rule!=\"\"}",
          "datasource": {"type": "loki", "uid": "loki"}
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
      "options": {
        "dedupStrategy": "none",
        "showLabels": true,
        "wrapLogMessage": true
      }
    }
  ]
}
